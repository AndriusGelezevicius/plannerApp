<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".about_me"
    android:background="@drawable/background_gradient">

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/profilePicture"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:src="@drawable/image"
        app:civ_border_color="#000000"
        app:civ_border_width="0dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:layout_below="@id/profilePicture"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/txtName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"
        android:text="Andrius Geleževičius"
        android:textSize="20dp"
        android:textStyle="bold"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtName"
        android:text="junior Android Developer"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:id="@+id/contactTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtName"
        android:layout_marginTop="200dp"
        android:layout_marginLeft="155dp"
        android:text="Contact me: " />

    <LinearLayout
        android:layout_marginTop="10dp"
        android:id="@+id/contactIcons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/contactTxt"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/fbBtn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/facebook" />

        <ImageView
            android:id="@+id/linkedInBtn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="15dp"
            android:src="@drawable/linkedin" />
    </LinearLayout>


</RelativeLayout>